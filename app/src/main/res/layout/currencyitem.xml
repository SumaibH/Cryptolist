<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_currencyCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currencyCardView"
        android:layout_width="wrap_content"
        app:strokeWidth="0dp"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/windowBackground"
        app:cardPreventCornerOverlap="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currencyshortname"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="@dimen/_23sdp"
            android:textStyle="bold"
            android:layout_marginVertical="@dimen/_6sdp"
            android:textColor="@color/black"
            android:text="USDTX"/>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>