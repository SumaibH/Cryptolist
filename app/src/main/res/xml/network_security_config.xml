<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates. Your app will still accept user installed certificates. -->
            <certificates src="system" />
            <!-- Additionally trust well known CAs. -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
